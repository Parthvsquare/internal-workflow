{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@internal-workflow/queue-v2": ["library/queue-v2/src/index.ts"],
      "@internal-workflow/storage": ["library/storage/src/index.ts"],
      "@internal-workflow/workflow-engine": [
        "library/workflow-engine/src/index.ts"
      ]
    }
  }
}
